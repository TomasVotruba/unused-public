includes:
    - config/extension.neon

parameters:
    # parameters of this extension
    unused_public:
        methods: true
        properties: true
        constants: true

    type_coverage:
        return_type: 99
        param_type: 99
        property_type: 99
        # print_suggestions: true

    level: 8

    paths:
        - src
        - tests

    checkGenericClassInNonGenericObjectType: false

    excludePaths:
        - "*/Fixture/*"
        - "*/Source/*"

    ignoreErrors:
        # collectors generics
        - '#Parameter (.*?) of method (.*?)Collector::processNode\(\) should be compatible with parameter#'
        - '#Method (.*?)Collector::processNode\(\) should return#'
